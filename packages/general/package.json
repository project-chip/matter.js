{
    "name": "@matter/general",
    "version": "0.0.0-git",
    "description": "Non-Matter support for Matter.js",
    "keywords": [
        "iot",
        "home automation",
        "matter",
        "smart device"
    ],
    "license": "Apache-2.0",
    "author": "matter.js authors",
    "contributors": [
        "Ingo Fischer <github@fischer-ka.de>",
        "Greg Lauckhart <greg@lauckhart.com>",
        "Martin Turon <mturon@google.com>",
        "Marco Fucci di Napoli <mfucci@gmail.com>"
    ],
    "bugs": {
        "url": "https://github.com/project-chip/matter.js/issues"
    },
    "homepage": "https://github.com/project-chip/matter.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/project-chip/matter.js.git"
    },
    "scripts": {
        "clean": "matter-build clean",
        "build": "matter-build",
        "build-clean": "matter-build --clean",
        "test": "matter-test -w",
        "coverage": "c8 matter-test esm",
        "embed-examples": "embedme **/README.md"
    },
    "dependencies": {
        "@noble/curves": "^1.8.1"
    },
    "devDependencies": {
        "@matter/testing": "*"
    },
    "files": [
        "dist/**/*",
        "src/**/*",
        "LICENSE",
        "README.md"
    ],
    "type": "module",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/esm/index.d.ts",
                "default": "./dist/esm/index.js"
            },
            "require": {
                "types": "./dist/cjs/index.d.ts",
                "default": "./dist/cjs/index.js"
            }
        }
    },
    "imports": {
        "#*": "./src/*"
    },
    "types": "dist/esm/index.d.ts",
    "typesVersions": {
        "*": {
            ".": [
                "/dist/cjs/index.d.ts"
            ]
        }
    },
    "publishConfig": {
        "access": "public"
    }
}
