{
    "name": "@matter/testing",
    "version": "0.0.0-git",
    "description": "Test harness for running JavaScript and Matter certification tests",
    "type": "module",
    "scripts": {
        "clean": "matter-build clean",
        "build": "matter-build",
        "build-clean": "matter-build --clean",
        "test": "matter-test"
    },
    "bin": {
        "matter-test": "bin/test.js"
    },
    "exports": {
        ".": {
            "import": {
                "types": "./dist/esm/index.d.ts",
                "default": "./dist/esm/index.js"
            },
            "require": {
                "types": "./dist/cjs/index.d.ts",
                "default": "./dist/cjs/index.js"
            }
        }
    },
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/esm/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/matter-js/matter.js.git"
    },
    "author": "matter.js authors",
    "contributors": [
        "Greg Lauckhart <greg@lauckhart.com>"
    ],
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/matter-js/matter.js/issues"
    },
    "homepage": "https://github.com/matter-js/matter.js#readme",
    "imports": {
        "#tools": "@matter/tools",
        "#tools/ansi-text": "@matter/tools/ansi-text"
    },
    "dependencies": {
        "@matter/tools": "0.0.0-git",
        "@types/express": "^5.0.3",
        "ansi-colors": "^4.1.3",
        "chai": "^4.5.0",
        "chai-as-promised": "^8.0.2",
        "dockerode": "^4.0.7",
        "express": "^5.1.0",
        "mocha": "^11.7.1",
        "playwright": "^1.55.0",
        "trace-unhandled": "^2.0.1",
        "wtfnode": "^0.10.0",
        "xml2js": "^0.6.2",
        "yaml": "^2.8.1",
        "yargs": "^18.0.0"
    },
    "devDependencies": {
        "typescript": "~5.9.2",
        "@types/dockerode": "^3.3.43",
        "@types/chai": "^4.3.20",
        "@types/chai-as-promised": "^8.0.2",
        "@types/debug": "^4.1.12",
        "@types/mocha": "^10.0.10",
        "@types/docker-modem": "^3.0.6",
        "@types/node": "^24.3.0",
        "@types/wtfnode": "^0.10.0",
        "@types/xml2js": "^0.4.14",
        "@types/yargs": "^17.0.33"
    },
    "publishConfig": {
        "access": "public"
    }
}
