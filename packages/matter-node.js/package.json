    "description": "Matter protocol for node.js",
    "keywords": [
        "iot",
        "home automation",
        "matter",
        "smart device"
    ],
    "license": "Apache-2.0",
    "author": "Project CHIP Authors",
    "contributors": [
        "Martin Turon <mturon@google.com>",
