        },
        "./common": {
            "types": "./dist/cjs/exports/common.d.ts",
            "default": "./dist/cjs/exports/common.js"
        },
        "./datatype": {
            "types": "./dist/cjs/exports/datatype.d.ts",
            "default": "./dist/cjs/exports/datatype.js"
        },
        "./device": {
            "types": "./dist/cjs/exports/device.d.ts",
            "default": "./dist/cjs/exports/device.js"
        },
        "./fabric": {
            "types": "./dist/cjs/exports/fabric.d.ts",
            "default": "./dist/cjs/exports/fabric.js"
        },
        "./interaction": {
            "types": "./dist/cjs/exports/interaction.d.ts",
            "default": "./dist/cjs/exports/interaction.js"
        },
        "./log": {
            "types": "./dist/cjs/exports/log.d.ts",
            "default": "./dist/cjs/exports/log.js"
        },
        "./math": {
            "types": "./dist/cjs/exports/math.d.ts",
            "default": "./dist/cjs/exports/math.js"
        },
        "./mdns": {
            "types": "./dist/cjs/exports/mdns.d.ts",
            "default": "./dist/cjs/exports/mdns.js"
        },
        "./model": {
            "types": "./dist/cjs/exports/model.d.ts",
            "default": "./dist/cjs/exports/model.js"
