        },
        "./package.json": "./package.json",
        "./ble": {
            "types": "./dist/cjs/exports/ble.d.ts",
            "default": "./dist/cjs/exports/ble.js"
        },
        "./certificate": {
            "types": "./dist/cjs/exports/certificate.d.ts",
