        },
        "./spec": {
            "types": "./dist/cjs/exports/spec.d.ts",
            "default": "./dist/cjs/exports/spec.js"
        },
        "./tlv": {
            "types": "./dist/cjs/exports/tlv.d.ts",
            "default": "./dist/cjs/exports/tlv.js"
        },
        "./*": {
            "types": "./dist/cjs/*/export.d.ts",
            "default": "./dist/cjs/*/export.js"
        }
