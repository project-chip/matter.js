    "scripts": {
        "clean": "build clean",
        "build": "build",
        "build-clean": "build --clean",
        "build-doc": "typedoc --excludeExternals --plugin typedoc-plugin-missing-exports --plugin typedoc-plugin-markdown --gitRemote upstream --tsconfig tsconfig.json",
        "test": "matter-test"
    },
    "devDependencies": {
        "@types/bn.js": "^5.1.1",
        "@types/bytebuffer": "^5.0.44",
