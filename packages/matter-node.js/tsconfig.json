{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        // Local dev compilation checks
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strict": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],
}
