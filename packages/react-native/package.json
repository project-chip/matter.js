{
    "name": "@matter.js/react-native",
    "version": "0.0.0-git",
    "description": "Experimental React Native support for matter.js",
    "keywords": [
        "iot",
        "home automation",
        "matter",
        "smart device",
        "ble"
    ],
    "license": "Apache-2.0",
    "author": "Project CHIP Authors",
    "contributors": [
        "Ingo Fischer <github@fischer-ka.de>"
    ],
    "bugs": {
        "url": "https://github.com/project-chip/matter.js/issues"
    },
    "homepage": "https://github.com/project-chip/matter.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/project-chip/matter.js.git"
    },
    "scripts": {
        "clean": "matter-build clean",
        "build": "matter-build",
        "build-clean": "matter-build --clean",
        "build-doc": "typedoc --excludeExternals --plugin typedoc-plugin-missing-exports --plugin typedoc-plugin-markdown --tsconfig src/tsconfig.json"
    },
    "imports": {
        "#general": "@matter.js/general",
        "#types": "@matter.js/types",
        "#protocol": "@matter.js/protocol",
        "#nodejs": "@matter.js/nodejs",
        "#*": "./src/*"
    },
    "devDependencies": {
        "@matter.js/tools": "*",
        "ts-node": "^10.9.2",
        "typescript": "~5.5.3"
    },
    "dependencies": {
        "@matter.js/nodejs": "*",
        "@matter.js/general": "*",
        "@matter.js/protocol": "*",
        "@react-native-async-storage/async-storage": "^2.0.0",
        "@react-native-community/netinfo": "^11.3.2",
        "@types/jwk-to-pem": "^2.0.3",
        "@types/node": "^22.5.2",
        "jwk-to-pem": "^2.0.5",
        "react-native-ble-plx": "^3.2.1",
        "react-native-polyfill-globals": "^3.1.0",
        "react-native-quick-crypto": "^0.7.4",
        "react-native-udp": "^4.1.7"
    },
    "overrides": {
        "brorand": "npm:@matter.js/brorand@1.1.0"
    },
    "files": [
        "dist/**/*",
        "src/**/*",
        "require/**/*",
        "LICENSE",
        "README.md"
    ],
    "type": "module",
    "main": "dist/cjs/export.js",
    "module": "dist/esm/export.js",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/esm/export.d.ts",
                "default": "./dist/esm/export.js"
            },
            "require": {
                "types": "./dist/cjs/export.d.ts",
                "default": "./dist/cjs/export.js"
            }
        },
        "./package.json": "./package.json",
        "./*": {
            "import": {
                "types": "./dist/esm/*/export.d.ts",
                "default": "./dist/esm/*/export.js"
            },
            "require": {
                "types": "./dist/cjs/*/export.d.ts",
                "default": "./dist/cjs/*/export.js"
            }
        }
    },
    "types": "dist/esm/export.d.ts",
    "typesVersions": {
        "*": {
            ".": [
                "/dist/cjs/export.d.ts"
            ],
            "*": [
                "/dist/cjs/*/export.d.ts"
            ]
        }
    },
    "publishConfig": {
        "access": "public"
    }
}
