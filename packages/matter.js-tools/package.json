{
    "name": "@project-chip/matter.js-tools",
    "version": "0.10.7",
    "description": "Matter.js tooling",
    "type": "module",
    "scripts": {
        "clean": "node bin/build.js clean",
        "build": "node bin/build.js",
        "build-clean": "node bin/build.js --clean",
        "test": "node bin/test.js"
    },
    "bin": {
        "matter-build": "./bin/build.js",
        "matter-test": "./bin/test.js",
        "matter-run": "./bin/run.js"
    },
    "exports": {
        ".": {
            "import": {
                "types": "./dist/esm/index.d.ts",
                "default": "./dist/esm/index.js"
            },
            "require": {
                "types": "./dist/cjs/index.d.ts",
                "default": "./dist/cjs/index.js"
            }
        }
    },
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/esm/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/project-chip/matter.js.git"
    },
    "author": "Project CHIP Authors",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/project-chip/matter.js/issues"
    },
    "homepage": "https://github.com/project-chip/matter.js#readme",
    "dependencies": {
        "@npmcli/map-workspaces": "^3.0.6",
        "@types/express": "^4.17.21",
        "ansi-colors": "^4.1.3",
        "c8": "^10.1.2",
        "chai": "^4.4.1",
        "chai-as-promised": "^7.1.2",
        "esbuild": "^0.23.1",
        "express": "^4.19.2",
        "glob": "^10.4.5",
        "mocha": "^10.7.3",
        "playwright": "^1.46.1",
        "typescript": "~5.5.3",
        "yargs": "^17.7.2"
    },
    "optionalDependencies": {
        "@esbuild/linux-x64": "^0.23.1",
        "v8-profiler-next": "^1.10.0"
    },
    "devDependencies": {
        "@types/chai": "^4.3.16",
        "@types/chai-as-promised": "^7.1.8",
        "@types/debug": "^4.1.12",
        "@types/dockerode": "^3.3.30",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.7",
        "@types/npmcli__map-workspaces": "^3.0.4",
        "@types/wtfnode": "^0.7.3",
        "@types/yargs": "^17.0.33",
        "dockerode": "^4.0.2",
        "trace-unhandled": "^2.0.1",
        "wtfnode": "^0.9.3"
    },
    "publishConfig": {
        "access": "public"
    }
}
